{% block body %}
    <img src="{{ avatar_url }}" class="img-thumbnail"/>

    <h1>{{ name }}</h1>
    <h1>{{ login }}</h1>

    <hr>
    <ul class="list-unstyled">
        {% for detail in details %}
            <li>{{ detail }}</li>
        {% endfor %}
        <li><a href="#" style="text-decoration: none"> {{ blog }}</a></li>
    </ul>
    <hr>

    <ul class="list-inline">
        {% for key, data in social_data %}
            <li class="list-inline-item">
                <span class="social-media-count">{{ data }}</span>
                <br>
                <span class="small muted">{{ key }}</span>
            </li>
        {% endfor %}
    </ul>

{% endblock %}